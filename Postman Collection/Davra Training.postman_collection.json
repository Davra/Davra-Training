					},
					"response": []
				},
				{
					"name": "Query Metrics",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"metrics\": [\n        {\n            \"name\": \"weight\",\n            \"limit\": 1000,\n            \"exclude_tags\": true\n        }\n    ],\n    \"start_relative\": {\n        \"value\": \"12\",\n        \"unit\": \"hours\"\n    },\n    \"end_relative\": {\n        \"value\": \"1\",\n        \"unit\": \"minutes\"\n    }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{BASE_URL}}/api/v2/timeseriesdata",
							"host": [
								"{{BASE_URL}}"
							],
							"path": [
								"api",
								"v2",
								"timeseriesdata"
							]
						},
						"description": "For More Info on building timeseries queries take a look at the KairosDB documentation - [https://kairosdb.github.io/docs/restapi/index.html](https://kairosdb.github.io/docs/restapi/index.html)"
					},
					"response": []
				},
				{
					"name": "Query Metrics - Sum values",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"metrics\": [\n        {\n            \"name\": \"weight\",\n            \"limit\": 1000,\n            \"exclude_tags\": true,\n            \"group_by\": [\n                {\n                    \"name\": \"tag\",\n                    \"tags\": [\n                        \"UUID\"\n                    ]\n                }\n            ],\n            \"aggregators\": [\n                {\n                    \"name\": \"sum\",\n                    \"align_sampling\": true,\n                    \"sampling\": {\n                        \"value\": 12,\n                        \"unit\": \"hours\"\n                    }\n                }\n            ]\n        }\n    ],\n    \"start_relative\": {\n        \"value\": \"12\",\n        \"unit\": \"hours\"\n    },\n    \"end_relative\": {\n        \"value\": \"1\",\n        \"unit\": \"minutes\"\n    }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{BASE_URL}}/api/v2/timeseriesdata",
							"host": [
								"{{BASE_URL}}"
							],
							"path": [
								"api",
								"v2",
								"timeseriesdata"
							]
						}
					},
					"response": []
				},
